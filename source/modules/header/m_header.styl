.m_header
  background #fff
  position relative
  z-index 100
  box-shadow 0 0 5px rgba(0,0,0,.25)
  @media screen and (min-width: 768px)
    position fixed
    left 0
    top 0
    width 100%
  &.fixed
    position fixed
    left 0
    top 0
    width 100%
    transform translateY(-72px)
  .container > .row:first-child
    @media screen and (max-width: 767px)
      background #fff
      position relative
      z-index 10
  .col-sm-6
    @media screen and (max-width: 767px)
      height 67px
  .col-xs-3
    @media screen and (max-width: 568px)
      width 0
      padding 0
  .col-xs-9
    @media screen and (max-width: 568px)
      width 100%
      padding-left 110px
    @media screen and (max-width: 460px)
      padding-right 60px
  .logo
    width 81px
    height 61px
    margin-top 10px
    margin-left 60px
    @media screen and (max-width: 1200px)
      margin-left 50px
    @media screen and (max-width: 1100px)
      margin-left 40px
    @media screen and (max-width: 992px)
      margin-left 30px
    @media screen and (max-width: 767px)
      margin-left 0
      margin-top 5px
    @media screen and (max-width: 568px)
      position absolute
      left 15px
      top 50%
      margin-top -30.5px
      z-index 1
    a
      display block
      width 100%
      height 100%
      background url("../images/logo.png") no-repeat 0 0
      background-size contain
  .singin,
  .socials
    @media screen and (max-width: 767px)
      float right
    @media screen and (max-width: 460px)
      float none
  .singin
    text-align right
    padding-top 10px
    @media screen and (max-width: 767px)
      padding-top 0
      margin-left 30px
      margin-top 20.5px
      margin-right 50px
    @media screen and (max-width: 568px)
      margin-left 15px
    @media screen and (max-width: 460px)
      margin-left 0
      text-align center
      margin-top 6px
      margin-bottom 6px
      margin-right 0
    @media screen and (max-width: 360px)
      margin-top 20.5px
    a
      anim()
      display inline-block
      vertical-align middle
      color #fff
      background $blue
      border-radius 4px
      text-decoration none
      font-size 13px
      height 20px
      line-height 20px
      padding 0 5px
      @media screen and (max-width: 767px)
        padding 0 20px
        height 26px
        line-height 26px
      &:hover
        background $red
      &:active
        background $red-dark
  .socials
    .buttons
      cursor default
      margin-top 15px
      text-align right
      @media screen and (max-width: 767px)
        margin-top 23px
      @media screen and (max-width: 460px)
        margin-top 0
        text-align center
      @media screen and (max-width: 360px)
        display none
      a
        display inline-block
        vertical-align middle
        margin-left 20px
        @media screen and (max-width: 568px)
          margin-left 10px
        @media screen and (max-width: 460px)
          margin-left 5px
          margin-right 5px
        &:hover
          opacity 1
        &.facebook
          background: url('../images/sprite.png') no-repeat 0 -131px
          width: 12px;
          height: 22px;
          &:hover
            background-position 0 0
        &.vk
          background: url('../images/sprite.png') no-repeat -29px -136px
          width: 23px;
          height: 13px;
          &:hover
            background-position -21px -4px
        &.twitter
          background: url('../images/sprite.png') no-repeat -70px -133px
          width: 22px;
          height: 18px;
          &:hover
            background-position -55px -4px;
        &.instagram
          background: url('../images/sprite.png') no-repeat -113px -132px
          width: 19px;
          height: 19px;
          &:hover
            background-position -86px -3px
        &.youtube
          background: url('../images/sprite.png') no-repeat -6px -164px
          width: 23px;
          height: 17px;
          &:hover
            background-position -113px -4px
  .menu
    display table
    width 100%
    margin-top 10px
    padding-bottom 10px
    @media screen and (max-width: 767px)
      anim()
      display block
      position absolute
      left 0
      top 0
      width 100%
      background #fff
      margin-top 0
      padding-bottom 0
      border-top 1px solid #d6d6d5
      transform translateY(-120%)
      &.open
        transform translateY(0)
    li
      display table-cell
      vertical-align middle
      text-align center
      padding 0 10px
      @media screen and (max-width: 992px)
        padding 0
      @media screen and (max-width: 767px)
        display block
      a
        helios()
        position relative
        color $blue
        text-decoration none
        font-size 20px
        line-height 1
        transition all .25s $ease-in-out-quad
        @media screen and (max-width: 992px)
          font-size 16px
          padding 0 5px
        @media screen and (max-width: 767px)
          display block
          font-size 21px
          padding 25px 0
          transition none !important
          &:hover,
          &:focus
            background $blue
            color #fff !important
        @media screen and (max-width: 460px)
          padding 15px 0
        &:hover
          text-shadow 0 0 15px #86dbff
      &.signup
        padding-right 0
        text-align right
        @media screen and (max-width: 767px)
          text-align center
        a
          color $red
          padding-right 0
          &:hover
            text-shadow 0 0 15px rgba(197, 35, 41, .3)

