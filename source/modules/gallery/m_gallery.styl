.m_gallery
  position relative
  .gallery-title
    helios()
    color #ff0000
    font-size 26px
    line-height 1
    margin-bottom 15px
    margin-top 10px
  .list-images
    clearfix()
    margin-top 15px
    margin-bottom 45px
    width 101%
    margin-left -0.5%
    .item
      position relative
      float left
      width 16.6%
      margin-bottom 10px
      padding-left 0.5%
      padding-right 0.5%
      @media screen and (max-width: 640px)
        width 24%
        margin 0
        margin-left 1%
        margin-bottom 2%
        &:nth-child(4n+1)
          margin-left 0
      @media screen and (max-width: 480px)
        width 49%
        margin-left 0
        margin-bottom 1%
      a
        display block
        height 100%
        width 100%
        text-decoration none
        .image
          position relative
          height 100%

          background-repeat no-repeat
          background-position 50%
          background-size cover
          &:after
            anim()
            content ''
            position absolute
            left 0
            top 0
            width 100%
            height 100%
            background rgba(44,75,142,0.3)
            opacity 0
          &:hover:after
            opacity 1

  .list-video
    clearfix()
    margin-top 15px
    margin-bottom 45px
    .item
      position relative
      float left
      width 32.4%
      margin-left 0.5%
      margin-right 0.5%
      margin-bottom 30px
      @media screen and (max-width: 640px)
        width 49%
        margin 0
        margin-left 2%
        margin-bottom 2%
        &:nth-child(2n+1)
          margin-left 0
          clear left
      @media screen and (max-width: 380px)
        width 100%
        margin-left 0
      &:last-child
        margin-right 0
      &:first-child
        margin-left 0
      &:nth-child(3n+1)
        clear left
        @media screen and (max-width: 640px)
          clear none
      a
        display block
        text-decoration none
        .image
          position relative
          height 230px
          background-repeat no-repeat
          background-position 50%
          background-size cover
          &:hover
            &:before
              background rgba(0,0,0,.3)
            &:after
              opacity 1
          &:before
            anim()
            content ''
            position absolute
            left 0
            top 0
            width 100%
            height 100%
            background rgba(0,0,0,.5)
          &:after
            anim()
            content ""
            background: url('../images/sprite.png') no-repeat -6px -68px;
            width: 73px;
            height: 52px;
            position absolute
            left 50%
            top 50%
            margin-top -(@height/2)
            margin-left -(@width/2)
            opacity .9

        .title
          anim()
          helios()
          font-size 22px
          color $blue
          margin-top 5px
          &:hover
            color $red
  .group
    margin-top 15px
    margin-bottom 30px
    &:last-child
      margin-bottom 45px
    .group-title
      helios()
      color $blue
      font-size 26px
      line-height 1
      margin-bottom 15px
      &.red
        color $red
    .items
      clearfix()
    .item
      position relative
      height 230px
      float left
      width 24.25%
      margin-left 0.5%
      margin-right 0.5%
      @media screen and (max-width: 640px)
        width 49%
        margin 0
        margin-left 2%
        margin-bottom 2%
        &:nth-child(2n+1)
          margin-left 0
      @media screen and (max-width: 380px)
        width 100%
        margin-left 0
      &:last-child
        margin-right 0
      &:first-child
        margin-left 0
      &:hover .title a
        padding 16px 0
      .title
        position absolute
        left 0
        bottom 0
        background rgba(44, 75, 142, .7)
        width 100%
        text-align center
        a
          anim()
          display inline-block
          vertical-align middle
          width 100%
          padding 7px 0
          color #fff
          text-decoration none
          font-size 17px
      .image
        width 100%
        height 100%
        a
          display block
          width 100%
          height 100%
          background-repeat no-repeat
          background-size cover
          background-position 50%
        &.video a
          position relative
          &:hover:after
            opacity 1
          &:before
            content ''
            position absolute
            left 0
            top 0
            width 100%
            height 100%
            background rgba(0,0,0,.5)
          &:after
            anim()
            content ""
            background: url('../images/sprite.png') no-repeat -6px -68px;
            width: 73px;
            height: 52px;
            position absolute
            left 50%
            top 50%
            margin-top -(@height/2)
            margin-left -(@width/2)
            opacity .9
