.m_forum
  position relative
  .forum-wrapper
    margin-top 20px
    margin-bottom 40px
    border 1px solid #ced7db
    border-bottom none
    background #fff
    table
      width 100%
      tr
        border-bottom 1px solid #ced7db
        background #fff !important
        cursor default
        &:nth-child(even)
          td
            anim()
            background #f1f4f5
        &:hover
          td
            background #ced7db
      td
        padding 15px 20px
        font-size 13px
        @media screen and (max-width: 568px)
          display none
          &:first-child
            display block
        & + td
          text-align center
        &:last-child
          text-align left
        a
          font-size 15px
          text-decoration none
        .latest
          a
            font-size 13px
            &.username
              display inline-block
              vertical-align middle
          .post-date
            position relative
            color #7e7c7b
            &:after
              content ''
              background url("../images/icon_topic_latest.png") no-repeat 0 0
              width 8px
              height 9px
              position absolute
              right -10px
              top 3px
              @media screen and (max-width: 992px)
                display none
      th
        helios()
        text-align left
        font-weight normal
        padding 15px 20px
        font-size 18px
        @media screen and (max-width: 568px)
          display none
          &:first-child
            display block
      .large-hidden
        display none
        margin-top 20px
        @media screen and (max-width: 568px)
          display block
        .themes, .messages, .latest
          display inline-block
          vertical-align top
        .latest
          .label, .post
            display inline-block
            vertical-align top
        .bottom
          .username, .post-date
            display inline-block
            vertical-align middle
            font-size 13px
            a
              font-size 13px
          .post-date
            color #7e7c7b
  .main-posts
    .post
      position relative
      border-bottom 1px solid #ced7db
      padding 20px
      .image
        position absolute
        left 20px
        top 20px
        height 150px
        width 150px
        @media screen and (max-width: 640px)
          width 100px
          height 100px
        a
          display block
          height 100%
          width 100%
          background-repeat no-repeat
          background-position 50%
          background-size cover
      .body
        padding-left 170px
        @media screen and (max-width: 640px)
          padding-left 120px
        @media screen and (max-width: 420px)
          padding-left 0
        p
          &:last-child
            margin-bottom 0
      .header
        clearfix()
        font-size 13px
        @media screen and (max-width: 420px)
          padding-left 120px
          height 100px
        .username,
        .post-date
          display inline-block
          vertical-align middle
          line-height 22px
        .username
          &:after
            content ', '
            color #7e7c7b
            margin-left -2px
          a
            color $blue
            text-decoration none
            &:hover
              color #000
        .post-date
          cursor default
          color #7e7c7b
          @media screen and (max-width: 460px)
            display block
        .rating
          float right
          height 15px
          line-height 22px
          @media screen and (max-width: 460px)
            float none
            position absolute
            right 20px
            top 20px
          .value, .controls
            display inline-block
            vertical-align middle
          .value
            font-size 15px
            &.up
              color #4db00c
            &.down
              color $red
          .controls
            margin-left 2px
            cursor default
            a
              color #d6d6d5
              text-decoration none
              font-size 22px
              line-height 22px
              display inline-block
              vertical-align middle
              padding 0 2px
              &:hover
                color $blue
  .m_form-comment
    background #f1f4f5
    padding 20px
    border-bottom 1px solid #ced7db
    form
      margin-bottom 0
      width 75%
      @media screen and (max-width: 640px)
        width 100%