.m_search-page
  position absolute
  width 230px
  height 30px
  right 0
  top 10px
  @media screen and (max-width: 767px)
    width 100%
    & + .page-title,
    & + .gallery-title
      padding-top 50px
  .submit
    position absolute
    right 0
    top 0
    height 30px
    width 30px
    border none
    background url("../images/search.png") no-repeat 50%
  input
    border 1px solid #84838a
    width 100%
    height 100%
    padding-left 10px
    padding-right 30px
    color #333
    font-size 15px
    &:focus
      border-color #333