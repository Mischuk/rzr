.m_item
  .image
    height 250px
    margin-bottom 10px
    @media screen and (max-width: 1300px)
      height 225px
    @media screen and (max-width: 767px)
      height 300px
    @media screen and (max-width: 460px)
      height 240px
    @media screen and (max-width: 380px)
      height 180px
    a
      position relative
      overflow hidden
      display block
      width 100%
      height 100%
      background-repeat no-repeat
      background-position 50%
      background-size cover
      &:after
        anim()
        content ''
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        background rgba(44, 75, 142, .3)
        opacity 0
      &:hover
        &:after
          opacity 1
  .date
    margin-bottom 10px
    color #7e7c7b
    font-size 15px
    line-height 1
  .title
    margin-bottom 10px
    a
      helios()
      color $blue
      font-size 22px
      line-height 1
      text-decoration none
      &:hover
        color #000
  .desc
    font-size 15px