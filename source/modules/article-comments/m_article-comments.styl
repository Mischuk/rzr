.m_article-comments
  .heading
    color $blue
    font-weight bold
    font-size 15px
    text-transform uppercase
  .comments-wrapper
    margin-top: 20px;
    margin-bottom: 40px;
    border: 1px solid #ced7db;
    background: #ffffff;
  .comment
    position: relative;
    padding: 20px;
    padding-bottom 0
    &:last-child
      .body
        border-bottom none
    .image
      position: absolute;
      top: 20px;
      left: 20px;
      width: 75px;
      height: 75px;
      a
        display: block;
        width: 100%;
        height: 100%;
        background-repeat no-repeat
        background-position 50%
        background-size cover
    .body
      padding-left 95px
      padding-bottom 20px
      border-bottom 1px solid #ced7db
      @media screen and (max-width: 420px)
        padding-left 0
      .header
        font-size 13px
        @media screen and (max-width: 420px)
          height 100px
          padding-left 95px
        .post-date
          display inline-block
          vertical-align middle
          line-height 22px
          cursor: default;
          color: #7e7c7b;
        .username
          display inline-block
          vertical-align middle
          line-height 22px
          &:after
            margin-left: -2px;
            content: ", ";
            color: #7e7c7b;
          a
            color $blue
            text-decoration none
      .message
        font-size 15px
        p
          margin-top 0
          &:last-child
            margin-bottom 0