.m_form-comment
  form
    width 480px
    margin-bottom 50px
    @media screen and (max-width: 568px)
      width 100%
  .title
    font-weight bold
    color $blue
    text-transform uppercase
    font-size 15px
    margin-bottom 10px
  textarea
    width 100%
    height 170px
    resize none
    padding 5px 10px
    border 1px solid #84838a
    &:focus
      border-color #333
  .login
    text-align right
    a
      text-decoration none
      color $blue
      font-size 14px
      &:hover
        text-decoration underline
  .submit
    margin-top 15px