.m_article
  overflow hidden
  position relative
  top 20px
  margin-top -20px
  .lead-image
    height 570px
    background-repeat no-repeat
    background-position 50%
    background-size cover
    @media screen and (max-width: 767px)
      height 250px
    &.small
      height 420px
  article
    padding-top 25px
    padding-bottom 25px
    h2
      font-size 26px
      color $blue
      margin-top 0
    .blue
      color $blue
  .links
    position relative
    padding-top 25px
    background #e1e7f4
    @media screen and (max-width: 767px)
      padding-top 0
      margin-bottom 50px
    &:before
      content ''
      position absolute
      left 0
      top 0
      width 100%
      height 2000px
      background #e1e7f4
      @media screen and (max-width: 767px)
        display none
    .title, ul
      position relative
      z-index 10
    .title
      helios()
      line-height 1
      background $blue
      color #fff
      font-size 18px
      padding 7px 10px
      margin-bottom 10px
    ul
      padding-left 10px
      padding-right 10px
      padding-bottom 15px
      a
        display inline-block
        vertical-align middle
        padding 2px 0
        font-size 14px
        color #000
        text-decoration none
        &:hover
          color $blue
          text-decoration underline
