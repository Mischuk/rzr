.modal
  background white
  padding 60px
  text-align left
  max-width 870px
  margin 40px auto
  position relative
  border 2px solid #c7c7c7
  @media screen and (max-width: 640px)
    padding 30px
  .title
    helios()
    color $blue
    font-size 49px
    line-height 1.2
    text-align center
    margin-bottom 20px
    @media screen and (max-width: 767px)
      line-height 1.1
      font-size 40px
    @media screen and (max-width: 640px)
      font-size 36px
  .paragraph
    text-align center
    font-size 20px
    line-height 1.3
    margin-bottom 20px
    max-width 80%
    margin 0 auto
  .submit
    text-align center
    button
      anim()
      display inline-block
      vertical-align middle
      line-height 33px
      height 33px
      border none
      background $blue
      color #fff
      font-size 13px
      width 120px
      border-radius 5px
      &:hover
        background $red
      &:active
        background $red-dark
  .mfp-close
    width 24px
    height 24px
    background: url('../images/close.png') no-repeat 0 0
    text-indent -9999px
    right 10px
    top 10px
    opacity 1
    &:hover
      background-position -66px 0
  form
    width 330px
    margin 0 auto
    text-align center
    @media screen and (max-width: 460px)
      width 100%
    label
      display block
      height 40px
      margin-bottom 20px
      @media screen and (max-width: 420px)
        height auto
      .label, .input
        display inline-block
        vertical-align middle
        line-height 40px
      .label
        width 80px
        @media screen and (max-width: 420px)
          display block
          width 220px
          margin 0 auto
          line-height 20px
          text-align left
    input
      width 240px
      line-height 40px
      padding-right: 10px;
      padding-left: 10px;
      border: 1px solid #84838a;
      background: #ffffff;
      font-family: "MyriadProRegular";
      font-size: 16px;
      font-weight: normal;
      font-style: normal;
      @media screen and (max-width: 420px)
        width 220px
      &:focus
        border-color #333
  .buttons
    text-align center
    div
      display inline-block
      vertical-align middle
      width 220px
      height 220px
      line-height 220px
      background #f6f6f6
      margin-left 5px
      margin-right 5px
      border 3px solid #f6f6f6
      text-align center
      @media screen and (max-width: 880px)
        width 180px
        height 180px
        line-height 180px
      @media screen and (max-width: 767px)
        width 120px
        height 120px
        line-height 120px
      @media screen and (max-width: 500px)
        width 180px
        height 180px
        line-height 180px
        display block
        margin 10px auto
      &:hover
        background #fff
      a
        position relative
        display block
        width 100%
        height 100%
        &:after
          content ""
          position absolute
          left 50%
          top 50%
      &.vk
        a:after
          background: url('../images/sprite-login.png') no-repeat 0 -7px;
          width: 82px;
          height: 46px;
          margin-left -(@width/2)
          margin-top -(@height/2)
        &:hover a:after
          background-position 0 -92px;
      &.ok
        a:after
          background: url('../images/sprite-login.png') no-repeat -106px 0;
          width: 35px;
          height: 60px;
          margin-left -(@width/2)
          margin-top -(@height/2)
        &:hover a:after
          background-position -184px -78px
      &.fb
        a:after
          background: url('../images/sprite-login.png') no-repeat -159px 0;
          width: 32px;
          height: 60px;
          margin-left -(@width/2)
          margin-top -(@height/2)
        &:hover a:after
          background-position -117px -86px